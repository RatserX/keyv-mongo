{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    }
}